</div>
 Modal 
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Nuevo Empleado</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">

                <div class="row">

                    <div class="col-sm-6">
                        <label for="exampleFormControlInput1" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="txtNombre">
                    </div>

                    <div class="col-sm-6">
                        <label for="exampleFormControlInput1" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="txtApellidos">
                    </div>

                    <div class="col-sm-6">
                        <label for="exampleFormControlInput1" class="form-label">Correo</label>
                        <input type="email" class="form-control" id="txtEmail">
                    </div>

                    <div class="col-sm-6">
                        <label for="exampleFormControlInput1" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="txtPassword">
                    </div>

                    <div class="col-sm-6">
                        <label for="exampleFormControlInput1" class="form-label">Fecha Nacimiento</label>
                        <input type="datetime" class="form-control" id="txtFechaNacimiento">
                    </div>

                    <div class="col-sm-6">
                        <label for="exampleFormControlInput1" class="form-label">Rol</label>
                        <select id="cboRol" class="form-select">
                            <option selected>Seleccione un rol</option>
                            <option value="1">Asesor</option>
                            <option value="2">Administrador</option>
                        </select>
                    </div>

                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>

        var tablaData

        tablaData = $("#tablaEmpleados").DataTable({

            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarEmpleados","Home")',
                type: "GET",
                dataType: "json",
            },
            "columns": [
                { "data": "Nombre" },
                { "data": "Apellidos" },
                { "data": "Correo" },
                { "data": "Contraseña" },
                { "data": "Rol.NombreRol" },
                {
                    "data": "esActivo", "render": function (valor) {
                        if (valor) {
                            return '<span class="badge rounded-pill bg-success btn-sm m-2">Cuenta Activa</span>' +
                                '<button type="button" class="btn btn-outline-danger btn-sm"><i class="fas fa-minus-circle fa-lg m-1"></i>Inhabilitar</button>'
                        } else {
                            return '<span class="badge rounded-pill bg-danger btn-sm m-2">Cuenta Desactivada</span>' +
                                   '<button type="button" class="btn btn-outline-success btn-sm"><i class="fas fa-plus-circle fa-lg m-1"></i>Habilitar</button>'
                        }

                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen fa-lg"></i></button>' +
                                       '<button type="button" class="btn btn-info btn-sm ms-2"><i class="fas fa-file-contract fa-lg" style="color: #ffffff"></button>',
                    "orderable" : false,
                    "searchable" : false,
                    "width": "95px"
                }
            ],

            "language": {
                "url": '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json',
            },

        });

        function AbrirModalEmpleados(json) {

            $("#txtNombre").val("");
            $("#txtApellidos").val("");
            $("#txtEmail").val("");
            $("#txtPassword").val("");
            $("#txtFechaNacimiento").val("");

            if (json != null) {
                $("#txtNombre").val(json.Nombre);
                $("#txtApellidos").val(json.Apellidos);
                $("#txtEmail").val(json.Correo);
                $("#txtPassword").val(json.Contraseña);
                $("#txtFechaNacimiento").val(json.FechaNacimiento);
                /*$("#cboRol").val(json.Rol == true ? 1 : 2);*/
            }

            $('#FormModal').modal("show");

        }

        $("#tablaEmpleados tbody").on("click", '.btn-editar', function () {

            var filaSeleccionada = $(this).closest("tr");

            var data = tablaData.row(filaSeleccionada).data();

            AbrirModalEmpleados(data)
        })


    </script>
}
